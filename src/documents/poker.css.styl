body
	margin: 0
	background: blue
	font-family: sans-serif
	color: yellow
	text-transform: uppercase
	text-shadow: 2px 2px 0 black
	font-size: 22px

table
	width: 100%
	background: navy
	border-bottom: 2px solid yellow
	border-collapse: collapse
	font-weight: bold
	font-size: 12px
	display: block

td
	padding: 0 4px
	text-align: right
.column1, .column2, .column3, .column4, .column5
	border-left: 2px solid yellow
.label
	text-align: left
tr:nth-child(even)
	background: lighten(navy, 5)
tr:nth-child(odd)
	background: navy

.text-right 
	float: right

.clearfix:before,
.clearfix:after
	display: table
	content: " "

.clearfix:after
	clear: both

.score-holder
	position: relative

.tab 
	background: navy
	border: 2px solid yellow
	position: absolute
	bottom: -28px
	right: 25%
	border-radius: 0 0 5px 5px
	font-size: 16px
	text-align: center
	padding: 4px
	cursor: pointer

.message
	text-transform: uppercase
	font-size: 14px
	width: 98%
	margin: 0
	padding: 1%
.message.bottom
	clear: both
.credits
	float: right
	text-align: right
	width: 30%

.cards, .buttons
	clear: both
	margin: 0 auto
.cards
	margin-bottom: 10px
.card_unit
	float: left
	width: 20%
.card
	width: 98%
	background-color: white
	border-radius: 5px
	margin: 1%
	position: relative
	padding-bottom: 135%
	.card-inner
		box-shadow: inset 0 0 2px 0 #222
		background: white
		position: absolute
		border-radius: 5px
		height: 97%
		width: 96%
		top: 1.5%
		left: 2%
	.suit
		width: 73%
		height: 68%
		background-size: 100% 100%
		position: absolute
		left: 13.5%
		top: 20%
	.value
		position: absolute
		font-size: 30px
		text-shadow: none
		font-weight: bold
		top: 0px
		left: 10px
.card.hold
	background: red
button
	width: 94%
	height: 30px
	background: yellow
	margin: 1px
	border: none
	border-radius: 10px
	font-size: 14px
	font-weight: bold
button:hover
	background: darken( yellow, 3 )

.buttons button
	float: right
	width: 45%

.undefined .card-inner
	background: navy
.diamonds .suit
	background-image: url(diamond.svg)
.clubs .suit
	background-image: url(club.svg)
.hearts .suit
	background-image: url(heart.svg)
.spades .suit
	background-image: url(spade.svg)

.diamonds .value, .hearts .value
	color: red
.clubs .value, .spades .value
	color: black

@media (min-width: 480px)
	.card .value
		font-size: 35px
	button, .message, table
		font-size: 16px
	button
		margin: 0 7px
		height: 30px

@media (min-width: 760px)
	.card .value
		font-size: 50px
	button, .message, table
		font-size: 22px
	button
		height: 50px
	.tab-scoring
		padding: 4px 12px
	.card
	border-radius: 15px
	.card-inner
		border-radius: 15px

@media (min-width: 980px)
	.card .value
		font-size: 70px
	button, .message, .tab-scoring
		font-size: 32px
	button
		height: 70px
	.tab-scoring
		bottom: -47px

@media (min-width: 1200px)
	.card .value
		font-size: 80px
	button, .message, .tab-scoring
		font-size: 40px
	button
		height: 70px
	.tab-scoring
		bottom: -56px

@media (min-width: 1400px)
	.card .value
		font-size: 90px
